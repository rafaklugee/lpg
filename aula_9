//SelectionSort_2
void mostra_vetor (int x[], int k);
void selection_sort ( int x[], int k);
void bubble_sort (int  x[], int k );

int main () {
    int v[MAX];
    int i;

    srand( time ( 0 ) );
    for (i = 0; i < MAX; i++)
        v[i] = rand() % 100 + 1; //Gera um nÃºmero entre 1 e 100.

    printf ("Vetor original: ");
    mostra_vetor ( v, MAX );
    selection_sort( v, MAX );
    //bubble_sort ( v, MAX );
    printf ("Vetor ordenado: ");
    mostra_vetor( v, MAX );

}

void mostra_vetor (int x[], int k) {
    int i;
    for (i = 0; i < k; i++){
        printf ("%d ", x[i]);
    }
    printf ("\n");
}

void selection_sort ( int x[], int k) {
    int i;
        for (i = 0; i < k - 1; i++){
        int i_menor = i, j;
        for (j = i + 1; j < k; j++){
            if (x[j] < x[i_menor])
                i_menor = j;
        }
        int aux = x[i];
        x[i] = x[i_menor];
        x[i_menor] = aux;
    }
}

void bubble_sort (int  x[], int k ) {
    int i,  trocou;
    do {
        trocou = 0;
        for ( i = 0; i < k - 1; i++){
            if (x[i] > x[i + 1]){
                int aux = x[i];
                x[i] = x[i + 1];
                x[i + 1] = aux;
                trocou = 1;
            }
        }
    }while ( trocou );
}
